!!! 5
html
  head
    title Startup Weekend Web App Template
    link(rel='stylesheet', href='/css/bootstrap.min.css')
    link(rel='stylesheet', href='/css/screen.css')
    link(rel='stylesheet', href='/css/bme-editor.css')

    script(src='//code.jquery.com/jquery.min.js')
    script(src='/js/bootstrap.min.js')
    script(src='/js/markdown.js')

  body

    .navbar.navbar-inverse.navbar-fixed-top
      .navbar-inner
        .container
          ul.nav
            li
              a(href="/")
                img(src="/img/coursefork.png", style="max-height: 1.4em; vertical-align: top;")
            li
              a(href="/")
                i.icon-home.icon-white
                |  Home
            li
              a(href="/library")
                i.icon-book.icon-white
                |  Library 

            li
              a(href="/about")
                i.icon-question-sign.icon-white
                |  About

          ul.nav.pull-right
            if (typeof(user) != 'undefined')
              li
                a(href="#") #{user.username}
              li
                a(href="/logout") Log Out
            else
              li
                .started
                  a.btn(href="/auth/github") Get Started &raquo;
              li
                a(href="/login") Log In

    .nice-border
      - if (noFrill)
        .container
          - if (typeof(message) != 'undefined')
            h1 #{message}

          block content
      - else
        .frill
          .container
            - if (typeof(message) != 'undefined')
              h1 #{message}

            block content

      .container
        footer
          small &copy; 2013 Coursefork
